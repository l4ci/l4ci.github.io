source "https://rubygems.org"

# GitHub Pages gem - ensures compatibility with GitHub Pages
gem "github-pages", group: :jekyll_plugins

# Required for Ruby 3.2+/4.0+
gem "csv"
gem "base64"
gem "bigdecimal"

# Force newer liquid version compatible with Ruby 3.2+
gem "liquid", ">= 4.0.4"

# Use webrick for Ruby 3.0+
gem "webrick"

# Optional: Windows-specific gems
gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]

group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
end
